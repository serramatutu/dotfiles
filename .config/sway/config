# XDG env vars compat
include /etc/sway/config.d/*
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# ------
# global
# ------
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"

set $c_background #000000
set $c_active     #ffffff
set $c_inactive   #000000

# -----
# style
# -----
font pango:SF Pro 12

default_border pixel 0

client.background $c_background
#                border      background  text        next_window
client.focused   $c_active   $c_active   $c_active   $c_active
client.unfocused $c_inactive $c_inactive $c_inactive $c_inactive

gaps outer 0
gaps inner 0

# Start swaybar to display a workspace bar (plus the system information i3status)
bar {
        swaybar_command waybar

	mode hide
	hidden_state hide
	modifier Mod4
}

# -----------
# assignments
# -----------
assign [app_id="alacritty"] $ws1
assign [app_id="zen"] $ws2
assign [app_id="tidal-hifi"] $ws4
assign [instance="vscodium"] $ws5
assign [title="^dev:"] $ws9

# --------
# monitors
# --------
set $ds_ext "HDMI-A-1"
set $ds_int "eDP-1"

# Symlink the wallpaper to ~/Pictures/wallpaper.jpg
output $ds_int pos 0 1440 background ~/Pictures/wallpaper.jpg fill $c_background
output $ds_ext enable pos 0 0 res 2560 1440 background ~/Pictures/wallpaper.jpg fill $c_background
workspace $ws1 output $ds_ext $ds_int
workspace $ws2 output $ds_ext $ds_int
workspace $ws3 output $ds_ext $ds_int
workspace $ws4 output $ds_ext $ds_int
workspace $ws5 output $ds_ext $ds_int
workspace $ws6 output $ds_int
workspace $ws7 output $ds_int
workspace $ws8 output $ds_int
workspace $ws9 output $ds_int
workspace $ws10 output $ds_int


# -----
# input
# -----
input "type:touchpad" {
	tap enabled
	# tap with 1 finger = left click, 2 fingers = right click, 3 fingers = middle click
	tap_button_map lrm
	# disable (touchpad) while typing
	dwt enabled
}


# ----
# keys
# ----
bindsym Mod4+Shift+q kill 

bindsym Mod4+space exec "rofi -show drun"

# change focus
bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

# move focused window
bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

# enter fullscreen mode for the focused container
bindsym Mod4+f fullscreen toggle

# switch to workspace
bindsym Mod4+1 workspace number $ws1
bindsym Mod4+2 workspace number $ws2
bindsym Mod4+3 workspace number $ws3
bindsym Mod4+4 workspace number $ws4
bindsym Mod4+5 workspace number $ws5
bindsym Mod4+6 workspace number $ws6
bindsym Mod4+7 workspace number $ws7
bindsym Mod4+8 workspace number $ws8
bindsym Mod4+9 workspace number $ws9
bindsym Mod4+0 workspace number $ws10

# move focused container to workspace
bindsym Mod4+Shift+1 move container to workspace number $ws1
bindsym Mod4+Shift+2 move container to workspace number $ws2
bindsym Mod4+Shift+3 move container to workspace number $ws3
bindsym Mod4+Shift+4 move container to workspace number $ws4
bindsym Mod4+Shift+5 move container to workspace number $ws5
bindsym Mod4+Shift+6 move container to workspace number $ws6
bindsym Mod4+Shift+7 move container to workspace number $ws7
bindsym Mod4+Shift+8 move container to workspace number $ws8
bindsym Mod4+Shift+9 move container to workspace number $ws9
bindsym Mod4+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym Mod4+r reload

## volume control
set $i3volume ~/.local/bin/i3volume
set $uictl ~/.local/bin/uictl
set $statuscmd i3blocks
set $statussig SIGRTMIN+10
set $volumestep 5
bindsym --locked XF86AudioRaiseVolume exec $i3volume -x 100 -n -t $statuscmd -u $statussig up $volumestep
bindsym --locked XF86AudioLowerVolume exec $i3volume -x 100 -n -t $statuscmd -u $statussig down $volumestep
bindsym --locked XF86AudioMute        exec $i3volume -x 100 -n -t $statuscmd -u $statussig mute
bindsym --locked XF86AudioMicMute     exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# brightness control
bindsym --locked XF86MonBrightnessUp   exec $uictl brightness +5%
bindsym --locked XF86MonBrightnessDown exec $uictl brightness 5%-

# suspend
exec xss-lock --transfer-sleep-lock -- swaylock --nofork
bindsym Mod4+control+q exec swaylock --color=000000

# --------
# services
# --------

# notifications
exec_always dunst
